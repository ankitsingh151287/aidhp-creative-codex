    <script>
        $(window).on('load', function () {

            /*Swiper carousel */
            var mySwiper = new Swiper('.featured-restaurant', {
                slidesPerView: 'auto',
                spaceBetween: 10,
                centeredSlides: 'true',
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                }
            });
            /*Swiper carousel */
            var mySwiper = new Swiper('.swiper-location', {
                slidesPerView: 1,
                spaceBetween: 0,
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                }
            });
            /*Swiper carousel */
            var mySwiper = new Swiper('.mostviewed', {
                slidesPerView: 2,
                spaceBetween: 0,
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                }
            });
            /* tooltip */
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            });
        });

    </script>
